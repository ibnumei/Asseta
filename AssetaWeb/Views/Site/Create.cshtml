@model AssetaWeb.Models.SiteMasterTbl
@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <h1>
        Create New Site Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li>Master</li>
        <li><a asp-area="" asp-controller="Site" asp-action="Index">Site Master</a></li>
        <li class="active">Create New Data</li>
    </ol>
    <br />

</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="Create">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">

                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Site Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SiteCode" class="form-control" autocomplete="off" readonly="readonly"/>
                                    </div>
                                </div>
                                <span asp-validation-for="SiteCode" class="text-danger"></span>
                                <br />
                                
                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Address</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                    </div>
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <br />


                                <div class="row">
                                    <div class="col-sm-4">

                                    </div>
                                    <div class="col-sm-8">

                                    </div>
                                </div><br />

                            </div>

                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Site Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SiteName" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="SiteName" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Company</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Company" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Company" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">

                                    </div>
                                    <div class="col-sm-8">
                                        @*<input type="submit" value="Create" class="btn  btn-default" />*@
                                        <button type="submit" class="btn btn-default">
                                            <i class="far fa-save"></i>&nbsp;&nbsp;Create Data
                                        </button>
                                    </div>
                                </div><br />

                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>


