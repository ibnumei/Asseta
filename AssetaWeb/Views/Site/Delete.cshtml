@model AssetaWeb.Models.SiteMasterTbl
@{
    ViewData["Title"] = "Delete";
}

<section class="content-header">
    <h1>
        Delete Site Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"> Master</a></li>
        <li><a asp-area="" asp-controller="Site" asp-action="Index">Site Master</a></li>
        <li class="active">Delete Site Master</li>
    </ol>
    <br />

</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="Delete">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <h3>Delete This Site Master ?</h3><br/>
                            <div class="col-sm-6">

                                 <div class="row">
                                    <div class="col-sm-4">
                                        <b>Site Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SiteCode" class="form-control" autocomplete="off" disabled />
                                    </div>
                                </div>
                                <span asp-validation-for="SiteCode" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Address</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <textarea asp-for="Address" class="form-control" rows="3" disabled></textarea>
                                    </div>
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <br />

                                <div class="row" hidden>
                                    <div class="col-sm-4">
                                        <label asp-for="SiteId"></label>
                                    </div>
                                    <div class="col-sm-8 ">
                                        <input asp-for="SiteId" class="form-control" autocomplete="off" disabled/>
                                    </div>
                                </div>
                                <span asp-validation-for="SiteId" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">

                                    </div>
                                    <div class="col-sm-8">

                                    </div>
                                </div><br />


                            </div>

                            <div class="col-sm-6">


                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Site Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SiteName" class="form-control" autocomplete="off" disabled/>
                                    </div>
                                </div>
                                <span asp-validation-for="SiteName" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Company</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Company" class="form-control" autocomplete="off" disabled/>
                                    </div>
                                </div>
                                <span asp-validation-for="Company" class="text-danger"></span>
                                <br />

                                <div class="row" hidden>
                                    <div class="col-sm-4">
                                        <b>Created At</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="CreatedAtSite" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="CreatedAtSite" class="text-danger"></span>
                                <br />





                                <div class="row">
                                    <div class="col-sm-4">

                                    </div>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-trash-alt"></i>&nbsp;&nbsp;Delete
                                        </button>
                                    </div>
                                </div><br />

                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>
