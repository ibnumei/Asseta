@model AssetaWeb.Models.EntityTbl

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <h1>
        Create New Entity Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"> Master</a></li>
        <li><a asp-area="" asp-controller="Entity" asp-action="Index">Entity Master</a></li>
        <li class="active">Create Entity New Data</li>
    </ol>
    <br />
</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="Create">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Entity Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="EntityCode" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="EntityCode" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Entity Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="EntityName" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="EntityName" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Company Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="CompanyName" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Site Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.DropDownList("SITEID", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <span asp-validation-for="SiteId" class="text-danger"></span>
                                <br />

                            </div>

                            <div class="col-sm-6">

                                

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Address</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                    </div>
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Contact</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Contact" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Contact" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Pic</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Pic" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Pic" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-default">
                                            <i class="far fa-save"></i>&nbsp;&nbsp;Create Data
                                        </button>
                                    </div>
                                </div><br />

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>

