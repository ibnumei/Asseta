@model AssetaWeb.Models.EntityTbl

@{
    ViewData["Title"] = "Edit";
}

<script src="~/plugin/components/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="~/plugin/components/bootstrap/dist/css/bootstrap.min.css">

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<section class="content-header">
    <h1>
        Edit Entity Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"> Master</a></li>
        <li><a asp-area="" asp-controller="Entity" asp-action="Index">Entity Master</a></li>
        <li class="active">Edit Entity</li>
    </ol>
    <br />
</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="Edit">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Entity Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="EntityCode" class="form-control" autocomplete="off" readonly="readonly" />
                                    </div>
                                </div>
                                <span asp-validation-for="EntityCode" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Entity Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="EntityName" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="EntityName" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Site Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @*@Html.DropDownList("SITEID", null, htmlAttributes: new { @class = "form-control"})*@
                                        @Html.DropDownListFor(model => model.SiteId, new SelectList(ViewBag.SITEID, "SiteId", "SiteName"), htmlAttributes: new { @class = "form-control", @name = "SITEID", @id = "SITEID" })
                                    </div>
                                </div>
                                <span asp-validation-for="SiteId" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Company Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @*<input asp-for="CompanyName" class="form-control" autocomplete="off" />*@
                                        @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", @id = "companyname", @name = "companyname", @required = "@required", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                                <br />

                                <div class="row" hidden>
                                    <div class="col-sm-4">
                                        <b>Asset Id</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="EntityId" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="EntityId" class="text-danger"></span>
                                <br />

                                <div class="row" hidden>
                                    <div class="col-sm-4">
                                        <b>Createdat</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="CreatedAtEntity" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="CreatedAtEntity" class="text-danger"></span>
                                <br />

                            </div>

                            <div class="col-sm-6">



                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Address</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @*<textarea asp-for="Address" class="form-control" rows="3"></textarea>*@
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @id = "address", @name = "address", @required = "@required", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Contact</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Contact" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Contact" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>PIC</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Pic" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Pic" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fa fa-edit"></i>&nbsp;&nbsp;Save Changes
                                        </button>
                                    </div>
                                </div><br />

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>

<script>

            $("#SITEID").change(function () {
            $.ajax({
                type: "Get",
                url: '@Url.Action("getget2", "Entity")',
                data: { aidi: $("#SITEID").val() },
                dataType: "json",
                success: function (data) {
                    $("#companyname").val(data[0]);
                    $("#address").val(data[1]);


                }
                });
            })


</script>