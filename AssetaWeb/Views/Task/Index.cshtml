@model IEnumerable<AssetaWeb.Models.TaskTbl>
@{
    ViewData["Title"] = "Index";
}

<section class="content-header">
    <h1>
        Task Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li>Master</li>
        <li class="active">Task Master</li>
    </ol>
    <br />
    <p>
        <a asp-action="Create" class="btn btn-default">
            <i class="fa fa-plus-square"></i>
            <span>&nbsp;  Add New Data</span>
        </a>
    </p>
</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">All of Data in Task Master</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="DataTableSite" class="table table-bordered table-striped" width="100%">
                <thead>
                    <tr>
                        <th>Task Id</th>
                        <th>Task Code</th>
                        <th>Task Detail</th>
                        <th>Asset Group </th>
                        <th>Time Estimate</th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.TaskId)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.TaskCode)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.TaskDetail)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.AssetGroup.AssetGroupName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.TimeEstimate)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-Id="@item.TaskId" class="btn  btn-default">
                                    <i class="fa fa-edit"></i>
                                    <span>Edit</span>
                                </a>&nbsp;

                                <a asp-controller="Site" asp-action="Delete" asp-route-id="@item.TaskId" class="btn  btn-default">
                                    <i class="fas fa-trash-alt"></i>
                                    <span>Delete</span>
                                    @*<input type="submit" value="Delete" class="btn btn-sm btn-danger" />*@
                                </a>

                            </td>
                        </tr>
                    </tbody>
                }

            </table>
        </div>
        <!-- /.box-body -->
    </div>
</section>
