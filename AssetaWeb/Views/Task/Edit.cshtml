@model AssetaWeb.Models.TaskTbl
@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>
        Create New Task Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li>Master</li>
        <li><a asp-area="" asp-controller="Task" asp-action="Index">Task Master</a></li>
        <li class="active">Edit Task Master</li>
    </ol>
    <br />

</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="Edit">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">

                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Task Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="TaskCode" class="form-control" autocomplete="off" readonly="readonly" />
                                    </div>
                                </div>
                                <span asp-validation-for="TaskCode" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Task Detail </b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="TaskDetail" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="TaskDetail" class="text-danger"></span>
                                <br />

                                <div class="row" hidden>
                                    <div class="col-sm-4">
                                        <b>Task Detail </b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="TaskId" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="TaskId" class="text-danger"></span>
                                <br />


                            </div>

                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Asset Group Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.DropDownList("AssetGroupId", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <span asp-validation-for="AssetGroupId" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Time Estimate</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="TimeEstimate" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="TimeEstimate" class="text-danger"></span>
                                <br />

                                @*<div class="row">
                                        <div class="col-sm-4">
                                            <b>Select Task Type</b>
                                        </div>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(model => model.TaskType, ViewBag.Daily as List<SelectListItem>, htmlAttributes: new { @class = "form-control", @name = "drop", @id = "drop", @style = "display: true" })
                                        </div>
                                    </div>
                                    <br />*@



                                <div class="row">
                                    <div class="col-sm-4">

                                    </div>
                                    <div class="col-sm-8">

                                    </div>
                                </div><br />

                                <div class="row">
                                    <div class="col-sm-4">

                                    </div>
                                    <div class="col-sm-8">
                                        @*<input type="submit" value="Create" class="btn  btn-default" />*@
                                        <button type="submit" class="btn btn-default">
                                            <i class="far fa-save"></i>&nbsp;&nbsp;Create Data
                                        </button>
                                    </div>
                                </div><br />

                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>