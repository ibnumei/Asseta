@model AssetaWeb.Models.LoginTbl
@{
    ViewData["Title"] = "signup";
}

<section class="content-header">
    <h1>
        Create New User
        <small></small>
    </h1>

    <br />

</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="signup">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">

                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="name" class="form-control" autocomplete="off"  id="name"/>
                                    </div>
                                </div>
                                <span asp-validation-for="name" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Email</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Email" class="form-control" autocomplete="off" id="email"/>
                                    </div>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <br />


                                <div class="row">
                                    <div class="col-sm-4">

                                    </div>
                                    <div class="col-sm-8">

                                    </div>
                                </div><br />

                            </div>

                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Username</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Username"  autocomplete="off"   class="form-control" style="border-radius:10px; height:50px;" id="username"/>
                                    </div>
                                </div>
                                <span asp-validation-for="Username" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Password</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Pass" class="form-control" autocomplete="off" id="password"/>
                                    </div>
                                </div>
                                <span asp-validation-for="Pass" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Type</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.type, ViewBag.Role as List<SelectListItem>, htmlAttributes: new { @class = "form-control", @name = "drop", @id = "type", @style = "display: true" })
                                    </div>
                                </div>
                                <span asp-validation-for="type" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">

                                    </div>
                                    <div class="col-sm-8">
                                        @*<input type="submit" value="Create" class="btn  btn-default" />*@
                                        @*<button type="submit" class="btn btn-default" onclick=" ">
                                            <i class="far fa-save"></i>&nbsp;&nbsp;Create Data
                                        </button>*@
                                        <button onclick="myFunction()">Submit</button>
                                    </div>
                                </div><br />

                            </div>

                        </div>
                    </div>
                </form>
                
                <div>
                    <div class="row form-border">
                        <div class="form-group">

                            @*<input type="text" id="myText">
        <input type="text" id="myText2">*@
                            <div class="row">
                                <div class="col-sm-4">
                                    <b>Name</b>
                                </div>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" autocomplete="off" id="myText" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <b>Email</b>
                                </div>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" autocomplete="off" id="myText2" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <b>username</b>
                                </div>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" autocomplete="off" id="myText3" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <b>pass</b>
                                </div>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" autocomplete="off" id="pass" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <b>Type</b>
                                </div>
                                <div class="col-sm-8">
                                    <select id="no">
                                        <option value="SU">Super Admin</option>
                                        <option value="WA">Web Admin</option>
                                    </select>
                                </div>
                            </div>
                            <p>Click the button to change the value of the text field.</p>
                            
                            <button onclick="myFunction()">Try it</button>
                        </div>
                    </div>

                        @*Name: <input type="text" id="myText">

                        <p>Click the button to change the value of the text field.</p>*@

                        



                    </div>

                </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>

<script>
    function myFunction() {
        //name
        var a = document.getElementById("myText").value;
        //email
        var b = document.getElementById("myText2").value;
        //username
        var c = document.getElementById("myText3").value;
        //pass
        var d = document.getElementById("pass").value;
        //type admin
        var no = document.getElementById("no");
        var option = no.options[no.selectedIndex].value;

        console.log(a, b, c, d, option);

        swal({
            title: "Save?",
            text: "Save this data ?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("signup")',
                        data: { aa: a, bb:b, cc:c, dd:d, ee:option},
                        dataType: "json",
                      // success: window.location.reload(),
                        success: function (response) {
                            swal("This Data Is Not Saved", {
                                icon: "success",
                            }).then(function() {
                              window.location.href = "/Home/Index"
                                //window.location.reload()
                            });
                           
                        }
                        
                    });

                }
                else {
                    swal("Your data is safe!");
                }
            });
    }
</script>

