@model AssetaWeb.Models.SparepartTbl

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>
        Create New Sparepart Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"> Master</a></li>
        <li><a asp-area="" asp-controller="Sparepart" asp-action="Index">Sparepart Master</a></li>
        <li class="active">Create New Sparepart Data</li>
    </ol>
    <br />
</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="Create">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Spare Part Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SparepartCode" class="form-control" autocomplete="off" readonly="readonly" />
                                    </div>
                                </div>
                                <span asp-validation-for="SparepartCode" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Site Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @*<input asp-for="AssetGroupId" class="form-control" autocomplete="off" />*@
                                        @Html.DropDownList("SITEID", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <span asp-validation-for="SiteId" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Supplier Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @*<input asp-for="AssetGroupId" class="form-control" autocomplete="off" />*@
                                        @Html.DropDownList("SupplierId", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <span asp-validation-for="SupplierId" class="text-danger"></span>
                                <br />

                                <div class="row" hidden>
                                    <div class="col-sm-4">
                                        <b>Spare Part Id</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SparepartId" class="form-control" autocomplete="off" readonly="readonly" />
                                    </div>
                                </div>
                                <span asp-validation-for="SparepartId" class="text-danger"></span>
                                <br />

                                <div class="row" hidden>
                                    <div class="col-sm-4">
                                        <b>Created at</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="CreatedAtSupp" class="form-control" autocomplete="off" readonly="readonly" />
                                    </div>
                                </div>
                                <span asp-validation-for="CreatedAtSupp" class="text-danger"></span>
                                <br />

                            </div>

                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Spare Part Description</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <textarea asp-for="SparepartDesc" class="form-control" rows="2"></textarea>
                                    </div>
                                </div>
                                <span asp-validation-for="SparepartDesc" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Quantity</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Qty" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Qty" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>UoM</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="UoM" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="UoM" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Safety Stock</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SafetyStock" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="SafetyStock" class="text-danger"></span>
                                <br />



                                <div class="row">
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-8">
                                        @*<input type="submit" value="Create" class="btn btn-lg btn-primary" />*@
                                        <button type="submit" class="btn btn-default">
                                            <i class="far fa-save"></i>&nbsp;&nbsp;Create Data
                                        </button>
                                    </div>
                                </div><br />

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>

