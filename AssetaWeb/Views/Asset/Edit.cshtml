@model AssetaWeb.Models.AssetTbl

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>
        Edit  Asset Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"> Master</a></li>
        <li><a asp-area="" asp-controller="Asset" asp-action="Index">Asset Master</a></li>
        <li class="active">Edit Asset Master</li>
    </ol>
    <br />
</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="Edit">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Asset Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="AssetCode" class="form-control" autocomplete="off" readonly="readonly" />
                                    </div>
                                </div>
                                <span asp-validation-for="AssetCode" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Asset Group Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.AssetGroupId, new SelectList(ViewBag.AssetGroupId, "AssetGroupId", "AssetGroupName"), htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <span asp-validation-for="AssetGroupId" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Entity Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.EntityId, new SelectList(ViewBag.EntityId, "EntityId", "EntityName"), htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <span asp-validation-for="EntityId" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Site Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.SiteId, new SelectList(ViewBag.SITEID, "SiteId", "SiteName"), htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <span asp-validation-for="SiteId" class="text-danger"></span>
                                <br />

                                <div class="row" hidden>
                                    <div class="col-sm-4">
                                        <b>Asset Id</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="AssetId" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="AssetId" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-8">
                                    </div>
                                </div><br />

                            </div>
                            <div class="col-sm-6">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Asset Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="AssetName" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="AssetName" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Serial Number</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SerialNumber" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="SerialNumber" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Validity Date</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="ValidityDate" class="form-control" autocomplete="off" type="date" />
                                    </div>
                                </div>
                                <span asp-validation-for="ValidityDate" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Location</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Location" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Location" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Valuation</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Valuation" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Valuation" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-8">
                                        @*<input type="submit" value="Create" class="btn btn-lg btn-primary" />*@
                                        <button type="submit" class="btn btn-default">
                                            <i class="fa fa-edit"></i>&nbsp;&nbsp;Save Changes
                                        </button>
                                    </div>
                                </div><br />

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>