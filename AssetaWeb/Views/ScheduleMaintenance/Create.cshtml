<script>

        $("#ASSETID").change(function () {


            $.ajax({
                type: "Get",
                url: '@Url.Action("getget", "ScheduleMaintenance")',
                data: { aidi: $("#ASSETID").val() },
                dataType: "json",
                success: function (data) {
                    $("#assetname").val(data[0]);


                }
                });
        })
</script>