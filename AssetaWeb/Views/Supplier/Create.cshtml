@model AssetaWeb.Models.SupplierTbl

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <h1>
        Create New Supplier Master
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"> Master</a></li>
        <li><a asp-area="" asp-controller="Supplier" asp-action="Index">Supplier Master</a></li>
        <li class="active">Create New Data</li>
    </ol>
    <br />
</section>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-sm-12">
                <form asp-action="Create">
                    <div class="row form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Supplier Code</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="SupplierCode" class="form-control" autocomplete="off" readonly="readonly"/>
                                    </div>
                                </div>
                                <span asp-validation-for="SupplierCode" class="text-danger"></span>
                                <br />
                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Supplier Name</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    </div>
                                </div>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-8">
                                    </div>
                                </div><br />
                            </div>
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Address</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                    </div>
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <br />
                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Contact</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="Contact" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="Contact" class="text-danger"></span>
                                <br />
                                <div class="row">
                                    <div class="col-sm-4">
                                        <b>Product Data</b>
                                    </div>
                                    <div class="col-sm-8">
                                        <input asp-for="ProductData" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                                <span asp-validation-for="ProductData" class="text-danger"></span>
                                <br />

                                <div class="row">
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-default">
                                            <i class="far fa-save"></i>&nbsp;&nbsp;Create Data
                                        </button>
                                    </div>
                                </div><br />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>
