@model AssetaWeb.Models.WoExecutionTbl
@{
    ViewData["Title"] = "Run";
}

<script src="~/plugin/components/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="~/plugin/components/bootstrap/dist/css/bootstrap.min.css">

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<section class="content-header">
    <h1>
        Create New Work Order
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="WorkOrder" asp-action="Index">Work Order</a></li>
        <li class="active">Create New Work Order</li>
    </ol>
    <br />
</section>

<section class="content container-fluid">
    <form asp-action="Run">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="box">

            <div class="box-header">
                <h3 class="box-title">
                    Workorder
                </h3>
                &nbsp;&nbsp;&nbsp;
                <button type="submit" class="btn pull-right">
                    <i class="far fa-save"></i>&nbsp;&nbsp;Save
                </button>&nbsp;&nbsp;&nbsp;
                @*<button type="submit" class="btn pull-right">
                        <i class="far fa-save"></i>&nbsp;&nbsp;Create Data 2
                    </button>&nbsp;&nbsp;&nbsp;*@
            </div>
            <hr />

            <div class="box-body">



                @*<div class="col-lg-12">
            <div class="col-lg-8"></div>
            <div class="col-lg-2">
                <button type="submit" class="btn pull-right">
                    <i class="far fa-save"></i>&nbsp;&nbsp;Create Data 1
                </button>
            </div>
            <div class="col-lg-2">
                <button type="submit" class="btn pull-right">
                    <i class="far fa-save"></i>&nbsp;&nbsp;Create Data 1
                </button>
            </div>
        </div>*@

                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#general" data-toggle="tab">General</a></li>
                        <li><a href="#sparepart" data-toggle="tab">Sparepart Used</a></li>
                        <li><a href="#task" data-toggle="tab">Task</a></li>
                    </ul>
                    <div class="tab-content">

                        <!-- Tab 1 -->
                        <div class="active tab-pane" id="general">
                            </br>
                            <div class="row form-border">
                                <div class="form-group">
                                    <div class="col-sm-6">

                                        <div class="row">
                                            <div class="col-sm-4">
                                                <b>Wo Execute ID</b>
                                            </div>
                                            <div class="col-sm-8">
                                                <input asp-for="WorkExeId" class="form-control" autocomplete="off" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="WorkExeId" class="text-danger"></span>
                                        <br />

                                        <div class="row">
                                            <div class="col-sm-4">
                                                <b>Wo Desc</b>
                                            </div>
                                            <div class="col-sm-8">
                                                <input asp-for="WoDesc" class="form-control" autocomplete="off" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="WoDesc" class="text-danger"></span>
                                        <br />

                                        <div class="row">
                                            <div class="col-sm-4">
                                                <b>Technician Name</b>
                                            </div>
                                            <div class="col-sm-8">
                                                <input asp-for="TechnicianId" class="form-control" autocomplete="off" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="TechnicianId" class="text-danger"></span>
                                        <br />

                                        <div class="row">
                                            <div class="col-sm-4">
                                                <b>Date</b>
                                            </div>
                                            <div class="col-sm-8">
                                                <input asp-for="Date" class="form-control" autocomplete="off" type="date" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                        <br />

                                        <div class="row">
                                            <div class="col-sm-4">
                                                <b>Site Name</b>
                                            </div>
                                            <div class="col-sm-8">
                                                <input asp-for="SiteId" class="form-control" autocomplete="off" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="SiteId" class="text-danger"></span>
                                        <br />



                                    </div>

                                </div>

                            </div>
                        </div>
                        <!-- Tab 1 -->
                        <!-- Tab 2 -->
                        <div class="tab-pane" id="sparepart">
                            </br>
                            <div class="row form-border">
                                <div class="form-group">
                                    <div class="col-sm-6">

                                        <div class="row">

                                            <div class="col-sm-4">
                                                <b>Sparepart</b>
                                            </div>

                                            <div class="col-sm-8">
                                                <div class="table-responsive">
                                                    <table class="table" width="100%">
                                                        <tr>
                                                            <th width="35%">
                                                                Sparepart ID
                                                            </th>
                                                            <th width="35%">
                                                                Sparepart Code
                                                            </th>
                                                            <th width="30%">
                                                                Qty
                                                            </th>
                                                        </tr>
                                                        @foreach (var item in ViewBag.Sparepart)
                                                        {
                                                            <tr>
                                                                <td width="35%">
                                                                    @item.SparepartId
                                                                </td>
                                                                <td width="35%">
                                                                    @item.SparepartCode
                                                                </td>
                                                                <td width="30%">
                                                                    @item.Quantity
                                                                </td>
                                                            </tr>
                                                        }
                                                    </table>
                                                </div>
                                            </div>

                                        </div>
                                        <br />

                                    </div>

                                </div>

                            </div>
                        </div>
                        <!-- Tab 2 -->
                        <!-- TAB 3-->
                        <div class="tab-pane" id="task">
                            </br>
                            <div class="row form-border">
                                <div class="form-group">
                                    <div class="col-sm-6">

                                        <div class="row">

                                            <div class="col-sm-4">
                                                <b>Task</b>
                                            </div>

                                            <div class="col-sm-8">
                                                <div class="table-responsive">
                                                    <table class="table" width="100%">
                                                        <tr>
                                                            <th width="35%">
                                                                Task Code
                                                            </th>
                                                            <th width="35%">
                                                                Detail
                                                            </th>
                                                            <th width="30%">
                                                                Type
                                                            </th>
                                                        </tr>
                                                        @foreach (var item in ViewBag.Task)
                                                        {
                                                            <tr>
                                                                <td width="35%">
                                                                    @item.TaskCode
                                                                </td>
                                                                <td width="35%">
                                                                    @item.Detail
                                                                </td>
                                                                <td width="30%">
                                                                    @item.TaskType
                                                                </td>
                                                            </tr>
                                                        }
                                                    </table>
                                                </div>
                                            </div>

                                        </div>
                                        <br />

                                    </div>

                                </div>

                            </div>
                        </div>
                        <!-- TAB 3-->


                    </div>
                </div>

            </div>

        </div>

    </form>



</section>